<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Create Account</title>
</head>
<body>
  <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
    <div class="w-full flex justify-end">
        <a class="bg-red-500 py-2 px-3 text-sm inline-block" href="/logout">Logout</a>
    </div>
    <h2 class="text-3xl mb-5"><span class="font-light">Hello</span>,<%= user.name%> </h2>
    <h5 class="mb-5">u can create post</h5>
    <form method="post" action="/post">
        <textarea placeholder="
        whats on your mind" class="p-3 w-1/3 resize-none block bg-transparent border-2 border-zinc-800 rounded-md "name="content"></textarea>
        <input class="px-3 py-2 bg-blue-500 block rounded-md mt-2" type="submit" value="Create new post">
        <div class="posts mt-20">
            <h3 class="text-zinc-400">Your posts</h3>
            <div class="postcontainer mt-5">
                <% user.posts.forEach(function(post) { %>
                    <div class="post w-1/3 p-4 mb-2 border-2 border-zinc-700 rounded-md">
                      <h4 class="text-blue-500 mb-2">@<%= user.username %></h4>
                      <p><%= post.content %></p>
                      <small class="mt-2 inline-block"><%=post.likes.length%> likes</small>
                      <div class="btns-flex gap-4 mt-5">
                        <a class="text-blue-500" href="/likes/<%=post._id %>"><%=post.likes.indexOf(user._id)===-1 ? "Like" : "Unlike" %></a>
                        <a class="text-zinc-400" href="/edits/<%=post._id %>">Edit</a>
                      </div>
                    </div>
                  <% }) %>
                
